@{
    ViewBag.Title = "Server Error";
    var somethingWentWrong = "Something went wrong";
    var message = "We're sorry, but the server encountered an internal error. Please try again later or go back to the home page.";
    var goHomeText = "Go to Home";
    var statusCode = "500";
}

<div class="flex flex-col items-center justify-center min-h-screen text-center">
    <div class="max-w-lg">

        <h1 class="text-9xl font-bold text-primary-800 animate-bounce">
            @statusCode
        </h1>
        <h2 class="text-4xl mt-4 text-primary-700 font-bold">
            @somethingWentWrong
        </h2>
        <p class="mt-2 text-primary-600">
           @message
        </p>
        <a asp-action="Index" asp-controller="Home"
           class="inline-block bg-primary-700 mt-6 text-white px-4 py-2 rounded hover:bg-primary-400 transition duration-300">
            @goHomeText
        </a>
    </div>
</div>
