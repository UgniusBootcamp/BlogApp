@model IEnumerable<BlogApp.Data.Dto.RoleRequest.RoleRequestListDto>

@{
    var title = "Role Requests";
    ViewData["Title"] = title;
    var requestRole = "Request Role";
    var youDoNotHaveAnyRolesRequested = "You do not have any roles requested.";
}

<div class="container mx-auto px-4 py-8">
    <header class="mb-8">
        <div class="flex justify-between items-center">
            <h1 class="text-3xl font-bold text-gray-800 tracking-tight relative inline-block">
                @title
                <span class="absolute -bottom-2 left-0 w-full h-1 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full"></span>
            </h1>
            <button id="btnRequestRole" class="bg-primary-500 hover:bg-primary-600 text-white font-semibold py-2 px-4 rounded cursor-pointer">
                @requestRole
            </button>
        </div>
    </header>

    <div class="row-auto flex flex-wrap">
        @if(Model.Count() > 0)
        {
            <div class="w-full">
                @foreach (var roleReq in Model)
                {
                    @await Html.PartialAsync("_UserRoleRequestCard", roleReq)
                }
            </div>
        } else
        {
            <div class="w-full">
                <div class="p-4 bg-white rounded-xl shadow-md transition-shadow border border-gray-100 mb-4">
                    <p class="text-gray-500">@youDoNotHaveAnyRolesRequested</p>
                </div>
            </div>
        }
    </div>
    <div id="modalPlaceholder"></div>
</div>

@section Scripts {
    <script src="~/js/roleRequest.js"></script>
}