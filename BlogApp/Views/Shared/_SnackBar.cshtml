@model string

<div id="snackbar"
     class="w-1/6  hidden fixed bottom-4 left-4 bg-primary-700 text-white text-lg px-4 py-3 rounded-lg shadow-md transition-opacity duration-300 ease-in-out z-50"
     role="alert">
    <span>@Model</span>
</div>

<script>
    function showSnackbar(message, duration = 3000) {
        const snackbar = document.getElementById('snackbar');
        snackbar.querySelector('span').textContent = message;
        snackbar.classList.remove('hidden');
        snackbar.classList.add('opacity-100');

        setTimeout(() => {
            snackbar.classList.add('hidden');
            snackbar.classList.remove('opacity-100');
        }, duration);
    }

    @if (!string.IsNullOrEmpty(Model))
    {
        <text>
            document.addEventListener('DOMContentLoaded', () => {
                showSnackbar("@Model");
            });
        </text>
    }
</script>
