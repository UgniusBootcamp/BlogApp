@model BlogApp.Models.ConfirmationModalViewModel

@{
    var cancel = "Cancel";
    var confirm = "Confirm";
}

<div id="@Model.ModalId" class="fixed inset-0 z-50 hidden items-center justify-center bg-gray-900/50">
    <div class="bg-white rounded-2xl shadow-lg w-full max-w-md mx-auto p-6">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-semibold" id="@Model.ModalIdLabel">@Model.Title</h2>

            <button class="text-gray-500 hover:text-gray-700 text-xl cursor-pointer" onclick="closeModal('@Model.ModalId')">✕</button>
        </div>
        <div class="mb-6 text-gray-700">
            @Model.Message
        </div>
        <div class="flex justify-end space-x-3">
            <button class="px-4 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 cursor-pointer transition-colors duration-300" onclick="closeModal('@Model.ModalId')">@cancel</button>
            <form method="post" action="@Model.ConfirmUrl" class="inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="px-4 py-2 rounded-lg bg-green-600 text-white hover:bg-green-500 cursor-pointer transition-colors duration-300">@confirm</button>
            </form>

        </div>
    </div>
</div>

<script>
    function openModal(id) {
        document.getElementById(id).classList.remove('hidden');
        document.getElementById(id).classList.add('flex');
    }

    function closeModal(id) {
        document.getElementById(id).classList.remove('flex');
        document.getElementById(id).classList.add('hidden');
    }
</script>
