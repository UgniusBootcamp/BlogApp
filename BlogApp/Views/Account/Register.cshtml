@model BlogApp.Data.Dto.User.RegisterDto

@{
    var title = "Register for BlogApp";
    ViewData["Title"] = title;
    var createAccount = "Create Account";
    var alreadyHaveAccount = "Already have an account?";
    var signIn = "Sign in";
    var passwordRequirements = "Password requirements:";
    var passwordRequirementsList = new List<string>
    {
        "At least 8 characters long",
        "At least one uppercase letter (A-Z)",
        "At least one lowercase letter (a-z)",
        "At least one number (0-9)",
        "At least one special character"
    };
}


<div class="max-w-md mx-auto p-8 bg-white rounded-lg shadow-lg mt-10">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">@title</h1>

    <form asp-action="Register" asp-controller="Account" method="post" class="space-y-5">
        @Html.AntiForgeryToken()

        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>

            <input asp-for="Name"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                   placeholder="Enter your first name" />
            <span asp-validation-for="Name" class="text-sm text-red-600 mt-1"></span>
        </div>

        <div>
            <label asp-for="Surname" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Surname"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                   placeholder="Enter your last name" />
            <span asp-validation-for="Surname" class="text-sm text-red-600 mt-1"></span>
        </div>

        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Email" type="email"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                   placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-sm text-red-600 mt-1"></span>
        </div>

        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Password" type="password"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                   placeholder="Create a password" />
            <span asp-validation-for="Password" class="text-sm text-red-600 mt-1"></span>
            <div class="mt-2 p-3 bg-gray-50 rounded-md text-xs text-gray-600">
                <p class="font-medium mb-1">@passwordRequirements</p>
                <ul class="list-disc list-inside space-y-1">
                    @foreach (var requirement in passwordRequirementsList)
                    {
                        <li>@requirement</li>
                    }
                </ul>
            </div>
        </div>

        <div>
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>

            <input asp-for="ConfirmPassword" type="password"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                   placeholder="Re-enter your password" />
            <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600 mt-1"></span>
        </div>

        <div class="pt-2">
            <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors hover:cursor-pointer">
                @createAccount
            </button>
        </div>

        <div class="text-center text-sm text-gray-600">
            @alreadyHaveAccount
            <a asp-action="Login" asp-controller="Account" class="text-blue-600 hover:text-blue-800 font-medium">
                @signIn
            </a>
        </div>
    </form>
</div>